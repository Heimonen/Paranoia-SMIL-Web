  <link rel="stylesheet" href="/css/bootstrap-theme.css" media="screen" charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/main.css" media="screen" charset="utf-8">
  <link rel="stylesheet" href="/stylesheets/login.css" media="screen" charset="utf-8">
  <script src="/js/jquery.js" charset="utf-8"></script>
  <script src="/js/bootstrap.js" charset="utf-8"></script>
  <meta charset="utf-8">
  <title>Paranoia</title>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">Paranoia</a>
      </div>
      <ul class="nav navbar-nav">
        <li class='smil_navbar_item' id='smil_home'><a href="/">Home</a></li>
        <li class='smil_navbar_item' id='smil_users'><a href="/users">Users</a></li>
      </ul>
      <ul class="nav navbar-nav pull-right">
